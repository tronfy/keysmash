{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
